// References:
// https://developer.chrome.com/extensions/manifest
// https://developer.chrome.com/extensions/declare_permissions
{
    "manifest_version": 2,
    "name": "Truo",
    "description": "truo.com.br - Esta extens√£o serve para fazer as compras no Ali Express",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
    "page_action": {
		"default_icon": {
			"16": "icon.png",
			"24": "icon.png",
			"32": "icon.png"
		},
        "default_popup": "popup.html",
        "default_title": "Truo"
	},
	"homepage_url": "https://app.truo.com.br/",
	"incognito": "not_allowed",
    "permissions": [
		"tabs",
		"storage",
		"activeTab",
		"notifications",
		"clipboardRead", // document.execCommand('paste'),
		"http://teste.com/*",
		"https://aliexpress.com/*",
		"https://*.aliexpress.com/*"
	],
	"web_accessible_resources": [ "icon.png" ],
	"externally_connectable": {
		"matches": [
			"http://teste.com/*",
			"https://*.truo.com.br/*",
			"https://*.aliexpress.com/*",
			"https://aliexpress.com/*"
		]
	},
	"content_scripts": [

		{
			// Inside Truo's Pending Orders page
			// "matches": [ "https://app.truo.com.br/*" ],
			"matches": [ "http://teste.com/*" ],
			"js": [ "jquery-3.2.1.min.js", "page-truo.js" ]
		},

		{
			// https://pt.aliexpress.com/store/product/Makibes-G03-Smart-Bracelet-IP68-Waterproof-Smart-Band-Heart-Rate-Monitor-Call-Reminder-GPS-chip-Sports/1086467_32820336414.html?spm=a2g03.11010108.26.4.40d9a8c9qDwH9K#ee
			// Don't forget to append #ee to URL
			"matches": [
				"https://pt.aliexpress.com/*",
				"https://aliexpress.com/*"
			],
			"js": ["jquery-3.2.1.min.js","page-product.js"]
		},
		{
			"matches": [
				"https://shoppingcart.aliexpress.com/shopcart/*"
			],
			"js": ["jquery-3.2.1.min.js","page-cart.js"]
		},
		{
			"matches": [
				"https://shoppingcart.aliexpress.com/order/*"
			],
			"js": ["jquery-3.2.1.min.js","page-shipping-form.js"]
		},
		{
			"matches": [
				"https://icashier.alipay.com/payment/checkout.htm*"
			],
			"js": ["jquery-3.2.1.min.js","page-payment.js"]
		},
		{
			"matches": [ "https://trade.aliexpress.com/*" ],
			"js": [ "jquery-3.2.1.min.js", "page-aliexpress.js" ],
			"css": [ "styles.css" ]
		}

		// https://icashier.alipay.com/payment/payment-result.htm*
		// This is the Billet's URL
	]
}